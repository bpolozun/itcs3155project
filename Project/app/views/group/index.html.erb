<h1>Listing Groups: All</h1>
<%= link_to 'Register a Group Ad', new_group_path %>
<table>
    <tr>
        <th>Group Name</th>
        <th>Number Needed</th>
        <th>Total Group Size</th>
        <th>Category</th>
    </tr>
    
    <% @group.each do |group| %>
        <tr>
            <td><%= group.groupName %></td>
            <td><%= group.numberNeeded %></td>
            <td><%= group.numberTotal %></td>
            <td><%= group.category %></td>
            
            <td><%= link_to 'Show', group_path(group) %></td>
            <td><%= link_to 'Edit', edit_group_path(group) %></td>
            #<td><%= link_to 'Destroy', group_path(group), method: :delete, data: {confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    
</table>